{
  "extends": ["standard"],
  "env": {
    "browser": true,
    "amd": true
  },
  "globals": {
    "it": "readonly",
    "expect": "readonly",
    "describe": "readonly"
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-restricted-globals": ["error", "event", "fdescribe"]
  }
}
